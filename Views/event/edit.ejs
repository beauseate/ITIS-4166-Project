<%- include('../partials/alertBar.ejs')%>  
<%- include('../partials/header.ejs')%>    
      <div class="leftContainer"></div>
      <div class="middleContainer">
        <form class="formContainer" method = "POST" action = "/events/<%=event.id%>?_method=PUT">
            <h3 class="topicTitle">Category</h3>
            <input type="text" id="category" name="category" value = "<%= event.category%>" required>
            <h3 class="titleTitle">Title</h3>
            <input type="text" id="title" name="title" value = "<%= event.title%>" required>
            <h3 class="detailsTitle">Details</h3>
            <input type="text" id="details" name="details" value = "<%= event.details%>" required minlength="10">
            <h3 class="locationTitle">Location</h3>
            <input type="text" id="location" name="location" value = "<%= event.location%>" required>
            <h3 class="dateTitle">Date</h3>
            <input type="date" id="date" name="date" value = "<%= event.date%>" required>
            <h3 class="startTitle">Start</h3>
            <input type="time" id="startTime" name="startTime" value = "<%= event.startTime%>" required>
            <h3 class="endTitle">End</h3>
            <input type="time" id="endTime" name="endTime" value = "<%= event.endTime%>" required>
            <h3 class="imageTitle">Image URL</h3>
            <input type="text" id="image" name="image" value = "<%= event.image%>" required>
            <input class="submitEventForm" type="submit" value="Submit">
          </form>
      </div>  
      <div class="rightContainer"></div>
<%- include('../partials/footer.ejs')%>